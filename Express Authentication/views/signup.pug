extends layout

block scripts
  if(loggedIn)
    script(src='/static/redirectLogin.js')
block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up
        if !loggedIn
          form(method='POST' action='/signup')
            div.form-group
              label(for='username') Username:
              input#name.form-control(type='text', placeholder='first and last' name='username' value=username)
            div.form-group
              label(for='password') Password:
              input#pw.form-control(type='password' name='password' value=password)
            div.form-group
              label(for='password2') Confirm Password:
              input#pw2.form-control(type='password' name='confirmPassword')
            button.btn.btn-primary(type='submit') Sign up
          p #{message}
        else
          div.message
            p Logging in...